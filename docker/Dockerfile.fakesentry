FROM python:3.10.5-alpine3.16@sha256:2ae2b820fbcf4e1c5354ec39d0c7ec4b3a92cce71411dfde9ed91d640dcdafd8

ARG groupid=5000
ARG userid=5000

WORKDIR /app/

RUN addgroup --gid $groupid app && \
    adduser --disabled-password --gecos "" --home /home/app --ingroup app --uid $userid app && \
    chown app:app /app/

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

RUN pip install -U 'pip>=20' && \
    pip install --no-cache-dir 'kent==0.5.0'

USER app

ENTRYPOINT ["/usr/local/bin/kent-server"]
CMD ["run"]
